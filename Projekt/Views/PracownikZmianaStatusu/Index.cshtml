@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<h2>Twoje zlecenia</h2>

<br />
<table class="table table-bordered table-striped">
    <tr>
        <th>Klient</th>
        <th>Opis</th>
        <th>Waga</th>
        <th>Ilosc</th>
        <th>Samochod</th>
        <th></th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td>
                <a href="@Url.Action("Details", "PracownikZmianaStatusu", new { @id=Model.Rows[i][5] })">Szczegóły</a> /
                <a href="@Url.Action("Edit", "PracownikZmianaStatusu", new { @id=Model.Rows[i][5] })">Dodaj status</a>
            </td>
        </tr>
    }
</table>
